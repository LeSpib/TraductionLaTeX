% 
% \begin{Exa}
% Ceci est une phrase compos\'ee dans l'environnement theorem {\envfont Exa}.
% \end{Exa}
% 
% \begin{Rem}
% Ceci est une phrase compos\'ee dans l'environnement theorem {\envfont Rem}.
% \end{Rem}
% 
% \begin{Lem}[Ben User]
% Ceci est une phrase compos\'ee dans l'environnement theorem {\envfont Lem}.
% \end{Lem}
% 
% \begin{Def}[D\'efinition Tr\`es Impressionnante]
% Ceci est une phrase compos\'ee dans l'environnement theorem {\envfont Def}.
% \end{Def}
%
